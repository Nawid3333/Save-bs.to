{
  "site_name": "bs.to",
  "site_url": "https://bs.to",
  "login_page": "https://bs.to/login",
  "series_list_page": "/andere-serien",

  "selectors": {
    "login": {
      "username_field": [{ "type": "name", "value": "login[user]" }],
      "password_field": [{ "type": "name", "value": "login[pass]" }],
      "submit_button": [
        { "type": "css", "value": "input[type='submit']" },
        { "type": "css", "value": "button[type='submit']" },
        { "type": "css", "value": "button.btn-primary" }
      ],
      "verification_markers": ["<a href=\"logout\">Logout</a>"]
    },

    "series_list": {
      "series_links": {
        "type": "css",
        "value": "a[href*='/serie/']",
        "description": "All series links on series list page"
      },
      "filter_descriptions": ["Cover vorschlagen", "Beschreibung vorschlagen"]
    },

    "series_page": {
      "title": {
        "type": "tag",
        "value": "h2",
        "description": "Series title in h2 tag"
      },
      "season_selector": {
        "type": "css",
        "value": "#seasons a",
        "full_watched_class": "watched",
        "description": "Season links selector: type=css, value=#seasons a, watched=green, unwatched=grey"
      }
    },

    "episodes": {
      "table": {
        "type": "css",
        "value": "table.episodes",
        "description": "Episodes table"
      },
      "table_rows": {
        "type": "css",
        "value": "table.episodes tr",
        "description": "Episode rows"
      },
      "watched_indicator": {
        "type": "row_class",
        "value": "watched",
        "description": "Watched status via row class attribute"
      },
      "episode_number_cell": 0,
      "episode_title_cell": 1,
      "episode_title_selector": "strong"
    }
  },

  "timing": {
    "page_load_delay": 0.8,
    "action_delay": 0.3,
    "season_load_delay": 0.5,
    "login_delay": 0.5,
    "initial_delay": 1.0,
    "timeout": 15,
    "success_delay": 0.3,
    "error_backoff_base": 1.0,
    "error_backoff_max": 8.0,
    "health_check_every": 15,
    "error_restart_threshold": 8,
    "max_retries_season": 3,
    "max_retries_retry": 5
  }
}
